    "lazysizes": "^5.3.0",
    "malihu-custom-scrollbar-plugin": "^3.1.5",
    "mini-css-extract-plugin": "^1.3.3",
    "node-sass": "^5.0.0",
    "node-sass-glob-importer": "^5.3.2",
    "optimize-css-assets-webpack-plugin": "^5.0.4",
    "popper.js": "^1.16.0",
    "postcss-loader": "^4.1.0",
    "precss": "^4.0.0",
