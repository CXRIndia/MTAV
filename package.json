{
  "name": "mtav",
  "version": "1.0.0",
  "scripts": {
    "clean": "rm -rf themes/mtav/dist/*",
    "start": "NODE_ENV=development NODE_SITE=mtav node ./webpack/start.js",
    "build": "NODE_ENV=production NODE_SITE=mtav node ./webpack/build.js",
    "sniff:setup": "chmod +x sniff_setup.sh && ./sniff_setup.sh",
    "docker:start": "docker-compose down && docker-compose up --build",
    "docker:setup": "docker exec -it mtav-php sh -c /setup.sh",
    "docker:shell": "docker exec -it mtav-php /bin/bash",
    "docker:ip": "docker inspect -f '{{range .NetworkSettings.Networks}}{{.IPAddress}}{{end}}' mtav-nginx",
    "phpcs": "phpcs --standard=WordPress-VIP-Go -sp --basepath=. --ignore=node_modules/* themes/mtav*",
    "update-deps": "rm -rf node_modules && rm package-lock.json && npm install",
    "docker:ip:update": "IP=$(docker inspect -f '{{range .NetworkSettings.Networks}}{{.IPAddress}}{{end}}' mtav-nginx) && HOST_ST=\"'$IP mtav.local '\" && docker exec mtav-php /bin/bash -c \"echo $HOST_ST  >> /etc/hosts\""
  },
  "dependencies": {
    "@babel/core": "^7.12.10",
    "@wordpress/babel-plugin-makepot": "^3.10.0",
    "@wordpress/babel-preset-default": "^4.20.0",
    "@wordpress/browserslist-config": "^2.7.0",
    "@wordpress/i18n": "^3.17.0",
    "ajv": "^7.0.3",
    "assets-webpack-plugin": "^7.0.0",
    "autoprefixer": "^10.2.1",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-inline-environment-variables": "^0.4.3",
    "bootstrap": "^4.5.3",
    "browser-sync": "^2.26.13",
    "browser-sync-webpack-plugin": "^2.3.0",
    "clean-webpack-plugin": "^3.0.0",
    "core-js": "^3.8.2",
    "cross-env": "^7.0.3",
    "css-loader": "^5.0.1",
    "dompurify": "^2.2.6",
    "dotenv": "^8.2.0",
    "eslint": "^7.17.0",
    "eslint-config-wordpress": "^2.0.0",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-wordpress": "^0.1.0",
    "exports-loader": "^1.1.1",
